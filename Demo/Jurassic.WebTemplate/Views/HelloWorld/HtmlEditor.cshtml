@using Jurassic.WebHtmlEditor;
@using Jurassic.WebUpload;
@model Jurassic.WebTemplate.Controllers.EditorModel

@{
    ViewBag.Title = "HtmlEditor";
    ViewBag.ShowToolbar = false;
}

@*WebSchedule组件提供的默认视图*@
@using Jurassic.WebSchedule;
@{
    ViewBag.ShowSearchBox = false;
    ViewBag.ShowToolBar = false;
}

<div class="mini-xs mini-sm mini-md mini-md-active">
    <div class="container-fluid ">
        <div class="mini-clearfix">
            <div class="mini-col-12">
                <div class="mini-panel layout-panel  frame-fit" title="HtmlEditor" width="auto" showCollapseButton="flase" showCloseButton="flase">
                     <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Title, new { @class = "col-md-2" })
                            <div class="col-md-10">@Html.TextBoxFor(model => model.Title, new { @class = "mini-textbox" })</div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Text, new { @class = "col-md-2" })
                            <div>
                                @Html.TextAreaFor(model => model.Text, new { style = "width:800px;height:360px" })
                                @Html.HtmlEditor("Text", "myEditor", true)
                            </div>
                        </div>
                        <div>
                            <div class="col-md-10 col-md-offset-2">
                                <a class="frame-submit mini-button">提交</a>
                            </div>
                        </div>
                    </div>

                    <table id="mainForm" class="boxcls">
                        <tr>
                            <td class="right"><label for="Id$text"><span style="color:red">*</span>ID</label></td>
                            <td>
                                <input name="Id" id="Id" class="mini-textbox" required="true" requirederrortext="@FStr.IDRequried" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    mini.parse();
    myEditor.html("<p>Hello world!</p>");
    $.regButton({
        text: "提交",
        afterSubmit: function (data) {
            alert(data.ReturnValue.Text);
        }
    });
</script>